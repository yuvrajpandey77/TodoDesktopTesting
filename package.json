{
    "name": "vite-react-typescript-starter",
    "private": true,
    "version": "0.1.0",
    "description": "Sakura Todo â€“ Vite React TS app packaged as a desktop app with Electron",
    "author": "Yuvraj Pandey",
    "type": "module",
    "scripts": {
        "dev:web": "vite",
        "dev:electron": "concurrently -k -r \"npm:watch:electron\" \"npm:launch:electron\"",
        "watch:electron": "tsc -p electron/tsconfig.json -w",
        "launch:electron": "wait-on http://localhost:5173 electron/dist/main.js electron/dist/preload.js && electron .",
        "dev": "concurrently -k -r \"npm:dev:*\"",
        "build:web": "vite build",
        "build:electron": "tsc -p electron/tsconfig.json",
        "build": "npm run build:web && npm run build:electron",
        "start:electron": "electron .",
        "icons:generate": "node scripts/generate-icons.mjs",
        "dist": "npm run build && npm run icons:generate && electron-builder -c electron-builder.yml",
        "release": "GH_TOKEN=$GH_TOKEN electron-builder --publish always -c electron-builder.yml",
        "lint": "eslint .",
        "preview": "vite preview"
    },
    "main": "electron/dist/main.js",
    "dependencies": {
        "framer-motion": "^12.23.12",
        "lucide-react": "^0.344.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^8.56.0",
        "@types/node": "^20.19.11",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "concurrently": "^8.2.2",
        "electron": "^30.5.1",
        "electron-builder": "^24.13.3",
        "eslint": "^8.56.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "globals": "^13.24.0",
        "icojs": "^0.2.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.3.3",
        "typescript-eslint": "^7.0.1",
        "vite": "^5.1.3",
        "wait-on": "^7.2.0"
    }
}
